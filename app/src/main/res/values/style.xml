<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.Regular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
    </style>

    <style name="TextAppearance.LargeTitle" parent="TextAppearance.Medium">
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="TextAppearance.Body" parent="TextAppearance.Regular">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="TextAppearance.Subhead" parent="TextAppearance.Regular">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="switch_adding" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">?attr/color_blue</item>
        <item name="colorSwitchThumbNormal">?attr/back_elevated</item>
        <item name="android:colorForeground">?attr/support_overlay</item>
    </style>

    <style name="MyCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">?attr/color_white</item>
        <item name="colorControlActivated">?attr/color_green</item>
    </style>

</resources>